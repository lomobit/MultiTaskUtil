<UserControl x:Class="MultipleCopyUtil.Controls.CopyTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultipleCopyUtil.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="Btn_ChooseDirectoryPath"
                Content="Выбрать папки"
                HorizontalAlignment="Left"
                Margin="46,16,0,0"
                VerticalAlignment="Top"
                Height="24"
                Width="113"
                Cursor="Hand"
                FontFamily="Palatino Linotype"
                Click="Btn_ChooseDirectoryPath_Click" />
        <Button x:Name="Btn_ChooseFilePath"
                Content="Выбрать файлы"
                HorizontalAlignment="Left"
                Margin="46,54,0,0"
                VerticalAlignment="Top"
                Height="24"
                Width="113"
                Cursor="Hand"
                FontFamily="Palatino Linotype"
                Click="Btn_ChooseFilePath_Click" />
        <Label x:Name="Lbl_ChooseDirectoryPath"
                Content=""
                HorizontalAlignment="Left"
                Height="26"
                Margin="162,16,0,0"
                VerticalAlignment="Top"
                Width="310"
                FontFamily="Palatino Linotype" />
        <Label x:Name="Lbl_ChooseFilePath"
                Content=""
                HorizontalAlignment="Left"
                Height="26"
                Margin="162,54,0,0"
                VerticalAlignment="Top"
                Width="310"
                FontFamily="Palatino Linotype" />
        <Button x:Name="Btn_CopyFileToDirectories"
                Content="Копировать во все папки"
                HorizontalAlignment="Left"
                Margin="46,126,0,0"
                VerticalAlignment="Top"
                Height="42"
                Width="176"
                Cursor="Hand"
                FontFamily="Palatino Linotype"
                Click="Btn_CopyFileToDirectories_Click"
                IsEnabled="False" />
        <Button x:Name="Btn_ClearChoosedDirectoryPath"
                Content="X"
                HorizontalAlignment="Left"
                Margin="18,16,0,0"
                VerticalAlignment="Top"
                Height="24"
                Width="23"
                Cursor="Hand"
                FontFamily="Palatino Linotype"
                Click="Btn_ClearChoosedDirectoryPath_Click" />
        <Button x:Name="Btn_ClearChooseFilePath"
                Content="X"
                HorizontalAlignment="Left"
                Margin="18,54,0,0"
                VerticalAlignment="Top"
                Height="24" Width="23"
                Cursor="Hand"
                FontFamily="Palatino Linotype"
                Click="Btn_ClearChooseFilePath_Click" />
        <CheckBox x:Name="Chk_OverwriteFile"
                Content="Перезаписать файлы, если существуют"
                HorizontalAlignment="Left"
                Margin="46,100,0,0"
                VerticalAlignment="Top"
                Width="247"
                FontFamily="Palatino Linotype" />
    </Grid>
</UserControl>
